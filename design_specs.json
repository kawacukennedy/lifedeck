        "scale": {"0": "0px", "xs": "8px", "sm": "16px", "md": "24px", "lg": "32px", "xl": "48px", "2xl": "64px", "3xl": "96px", "4xl": "128px"}
      },
      "borders": {
        "radius_scale": {"none": "0px", "sm": "4px", "md": "8px", "lg": "16px", "xl": "24px", "full": "9999px"},
        "width_scale": {"thin": "1px", "medium": "2px", "thick": "3px"}
      },
      "shadows": {
        "elevation_levels": {
          "level_0": "none",
          "level_1": "0 1px 3px rgba(0,0,0,0.12)",
          "level_2": "0 4px 6px rgba(0,0,0,0.16)",
          "level_3": "0 10px 20px rgba(0,0,0,0.19)"
        },
        "usage_context": {"cards": "level_1", "modals": "level_3", "dropdowns": "level_2", "buttons": "level_1"}
      },
      "motion": {
        "duration_scale": {"instant": "0ms", "fast": "100ms", "normal": "200ms", "slow": "300ms", "slower": "500ms"},
        "easing_functions": {"linear": "cubic-bezier(0,0,1,1)", "ease_in": "cubic-bezier(0.4,0,1,1)", "ease_out": "cubic-bezier(0,0,0.2,1)", "ease_in_out": "cubic-bezier(0.4,0,0.2,1)"}
      },
      "z_index_scale": {"base": "0", "dropdown": "1000", "modal": "1050", "tooltip": "1070", "toast": "1080"}
    }
  }
}