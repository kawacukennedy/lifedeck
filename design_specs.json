          "h2": {"font_size": "30px", "line_height": "38px", "letter_spacing": "0px", "font_weight": 600, "margin": "0 0 20px 0"},
          "body_large": {"font_size": "18px", "line_height": "28px", "letter_spacing": "0px", "font_weight": 400},
          "body_medium": {"font_size": "16px", "line_height": "24px", "letter_spacing": "0px", "font_weight": 400},
